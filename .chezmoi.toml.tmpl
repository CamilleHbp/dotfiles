{{/* boolean feature tags */}}
{{- $ephemeral := false -}}{{/* true if this machine is ephemeral, e.g. a cloud or VM instance */}}
{{- $headless := false -}}{{/* true if this machine does not have a screen and keyboard */}}
{{- $personal := false -}}{{/* true if this machine should have personal secrets */}}
{{- "" -}}

{{/* detect GitHub codespaces, VSCode remote containers, Docker containers, Multipass VMs, and Vagrant boxes */}}
{{- if or (env "CODESPACES") (env "REMOTE_CONTAINERS_IPC") (eq .chezmoi.username "root" "ubuntu" "vagrant" "vscode") -}}
{{-   $ephemeral = true -}}
{{-   $headless = true -}}
{{- end -}}

{{/* work around unreliable hostname on darwin */}}
{{- $hostname := .chezmoi.hostname -}}
{{- if eq .chezmoi.os "darwin" -}}
{{-   $computerName := output "scutil" "--get" "ComputerName" | trim -}}
{{-   if eq $computerName "Camilleâ€™s MacBook Pro" -}}
{{-     $hostname = "camille-mbp" -}}
{{-   else -}}
{{-     $hostname = $computerName -}}
{{-   end -}}
{{- end -}}

{{- $personal := promptBool "Is this a personal computer? (y/n)" false -}}
{{- $email := promptString "Git email address for the author/committer" }}
{{- $name := promptString "Git username for the author/committer" }}
{{- $op_email := promptString "Email address used with 1password" }}
{{- $op_domain := promptString "Domain used with 1password" }}
{{- $op_secret := promptString "Your 1password secret (NOT password)" }}

[data]
    email = "{{ $email }}"
    ephemeral = {{ $ephemeral }}
    headless = {{ $headless }}
    hostname = {{ $hostname | quote }}
    name = "{{ $name }}"
    op_domain = "{{ $op_domain }}"
    op_email = "{{ $op_email }}"
    op_secret = "{{ $op_secret }}"
    personal = {{ $personal }}
